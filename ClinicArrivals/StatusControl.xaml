<UserControl x:Class="ClinicArrivals.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClinicArrivals"
             xmlns:model="clr-namespace:ClinicArrivals.Models;assembly=ClinicArrivals.Models"
             mc:Ignorable="d" 
             d:DesignHeight="139.761" d:DesignWidth="380.717">
    <UserControl.DataContext>
        <model:ServerStatuses/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Padding" Value="12"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding Path=IncomingSmsReader.Name}"/>
        <Label Grid.Row="1" Content="{Binding Path=AppointmentScanner.Name}"/>
        <Label Grid.Row="2" Content="{Binding Path=Oridashi.Name}"/>

        <Label Grid.Row="0" Grid.Column="3" Content="{Binding Path=IncomingSmsReader.CurrentStatus}"/>
        <Label Grid.Row="1" Grid.Column="3" Content="{Binding Path=AppointmentScanner.CurrentStatus}"/>
        <Label Grid.Row="2" Grid.Column="3" Content="{Binding Path=Oridashi.CurrentStatus}"/>

        <Button Grid.Row="0" Grid.Column="1" Content="Start" Command="{Binding Path=IncomingSmsReader.Start}" CommandParameter="{Binding IncomingSmsReader.CurrentStatus, Mode=OneWay}"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Start" Command="{Binding Path=AppointmentScanner.Start}" CommandParameter="{Binding AppointmentScanner.CurrentStatus, Mode=OneWay}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Start" Command="{Binding Path=Oridashi.Start}" CommandParameter="{Binding Oridashi.CurrentStatus, Mode=OneWay}"/>

        <Button Grid.Row="0" Grid.Column="2" Content="Stop" Command="{Binding Path=IncomingSmsReader.Stop}"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Stop" Command="{Binding Path=AppointmentScanner.Stop}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Stop" Command="{Binding Path=Oridashi.Stop}"/>
    </Grid>
</UserControl>
